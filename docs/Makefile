all: \
    black.490x490.png \
    white.490x490.png \
    red.490x490.png \
    green.490x490.png \
    blue.490x490.png


black.490x490.png:
	convert -size 490x490 "xc:#000000" $@

white.490x490.png:
	convert -size 490x490 "xc:#ffffff" $@

red.490x490.png:
	convert -size 490x490 "xc:#ff0000" $@

green.490x490.png:
	convert -size 490x490 "xc:#00ff00" $@

blue.490x490.png:
	convert -size 490x490 "xc:#0000ff" $@

